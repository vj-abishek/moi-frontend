    <script is:inline>
      (function() {
        const canvas = document.getElementById('dot-grid');
        if (!canvas) return;
        
        const ctx = canvas.getContext('2d');
        const heroSection = document.getElementById('hero-section');
        
        // Configuration - subtle base, punchy hover
        const DOT_SPACING = 40;
        const BASE_RADIUS = 1;
        const MAX_RADIUS = 5;
        const BASE_ALPHA = 0.08;
        const MAX_ALPHA = 0.7;
        const INFLUENCE_RADIUS = 120;
        const LERP_FACTOR = 0.12;
        
        // Colors - gold/amber primary to match brand
        const PRIMARY_COLOR = { r: 234, g: 179, b: 8 }; // Tailwind amber-500
        const BASE_COLOR = { r: 255, g: 255, b: 255 };
        
        let mouseX = -1000;
        let mouseY = -1000;
        let dots = [];
        let animationId = null;
        let isVisible = true;
        
        function createDots() {
          dots = [];
          const cols = Math.ceil(canvas.width / DOT_SPACING) + 1;
          const rows = Math.ceil(canvas.height / DOT_SPACING) + 1;
          
          for (let row = 0; row < rows; row++) {
            for (let col = 0; col < cols; col++) {
              dots.push({
                x: col * DOT_SPACING,
                y: row * DOT_SPACING,
                currentRadius: BASE_RADIUS,
                currentAlpha: BASE_ALPHA,
                currentColor: { ...BASE_COLOR }
              });
            }
          }
        }
        
        function lerp(start, end, factor) {
          return start + (end - start) * factor;
        }
        
        function resizeCanvas() {
          const rect = heroSection.getBoundingClientRect();
          const dpr = window.devicePixelRatio || 1;
          
          canvas.width = rect.width * dpr;
          canvas.height = rect.height * dpr;
          canvas.style.width = rect.width + 'px';
          canvas.style.height = rect.height + 'px';
          
          ctx.scale(dpr, dpr);
          createDots();
        }
        
        function updateDot(dot) {
          const dx = mouseX - dot.x;
          const dy = mouseY - dot.y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          let targetRadius = BASE_RADIUS;
          let targetAlpha = BASE_ALPHA;
          let targetColor = { ...BASE_COLOR };
          
          if (distance < INFLUENCE_RADIUS) {
            const influence = 1 - (distance / INFLUENCE_RADIUS);
            const easedInfluence = influence * influence; // Quadratic easing
            
            targetRadius = BASE_RADIUS + (MAX_RADIUS - BASE_RADIUS) * easedInfluence;
            targetAlpha = BASE_ALPHA + (MAX_ALPHA - BASE_ALPHA) * easedInfluence;
            
            // Blend toward primary color
            targetColor = {
              r: BASE_COLOR.r + (PRIMARY_COLOR.r - BASE_COLOR.r) * easedInfluence,
              g: BASE_COLOR.g + (PRIMARY_COLOR.g - BASE_COLOR.g) * easedInfluence,
              b: BASE_COLOR.b + (PRIMARY_COLOR.b - BASE_COLOR.b) * easedInfluence
            };
          }
          
          // Smooth interpolation
          dot.currentRadius = lerp(dot.currentRadius, targetRadius, LERP_FACTOR);
          dot.currentAlpha = lerp(dot.currentAlpha, targetAlpha, LERP_FACTOR);
          dot.currentColor.r = lerp(dot.currentColor.r, targetColor.r, LERP_FACTOR);
          dot.currentColor.g = lerp(dot.currentColor.g, targetColor.g, LERP_FACTOR);
          dot.currentColor.b = lerp(dot.currentColor.b, targetColor.b, LERP_FACTOR);
        }
        
        function drawDot(dot) {
          const { r, g, b } = dot.currentColor;
          ctx.beginPath();
          ctx.arc(dot.x, dot.y, dot.currentRadius, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(${Math.round(r)}, ${Math.round(g)}, ${Math.round(b)}, ${dot.currentAlpha})`;
          ctx.fill();
        }
        
        function animate() {
          if (!isVisible) {
            animationId = requestAnimationFrame(animate);
            return;
          }
          
          const rect = heroSection.getBoundingClientRect();
          ctx.clearRect(0, 0, rect.width, rect.height);
          
          for (const dot of dots) {
            updateDot(dot);
            drawDot(dot);
          }
          
          animationId = requestAnimationFrame(animate);
        }
        
        function handleMouseMove(e) {
          const rect = heroSection.getBoundingClientRect();
          mouseX = e.clientX - rect.left;
          mouseY = e.clientY - rect.top;
        }
        
        function handleMouseLeave() {
          mouseX = -1000;
          mouseY = -1000;
        }
        
        // Intersection Observer for performance
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach(entry => {
              isVisible = entry.isIntersecting;
            });
          },
          { threshold: 0 }
        );
        
        // Initialize
        resizeCanvas();
        observer.observe(heroSection);
        heroSection.addEventListener('mousemove', handleMouseMove);
        heroSection.addEventListener('mouseleave', handleMouseLeave);
        window.addEventListener('resize', resizeCanvas);
        animate();
        
        // Cleanup on page navigation (for SPA)
        document.addEventListener('astro:before-swap', function() {
          if (animationId) cancelAnimationFrame(animationId);
          observer.disconnect();
          heroSection.removeEventListener('mousemove', handleMouseMove);
          heroSection.removeEventListener('mouseleave', handleMouseLeave);
          window.removeEventListener('resize', resizeCanvas);
        });
      })();
    </script>
