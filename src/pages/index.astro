---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, FEATURES, HOW_IT_WORKS, getAppUrl } from '../consts';
import { generateSoftwareApplicationSchema, generateWebPageSchema } from '../seo';

const signupUrl = getAppUrl('/signup', Astro.url);
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Generate page-specific schemas
const softwareAppSchema = generateSoftwareApplicationSchema();
const webPageSchema = generateWebPageSchema(
  canonicalUrl,
  SITE_TITLE,
  SITE_DESCRIPTION
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead 
      title={SITE_TITLE} 
      description={SITE_DESCRIPTION} 
      schema={[softwareAppSchema, webPageSchema]}
    />
  </head>
  <body class="min-h-screen flex flex-col bg-base-100 font-sans">
    <Header />
    
    <main class="flex-1">
      <!-- Hero Section -->
      <section id="hero-section" class="relative overflow-hidden min-h-[90vh] flex items-center">
        <!-- Subtle gradient base -->
        <div class="absolute inset-0 bg-gradient-to-br from-base-100 via-base-100 to-base-100/95"></div>
        
        <!-- Interactive dot grid canvas - on top of gradient -->
        <canvas id="dot-grid" class="absolute inset-0 w-full h-full z-[1] pointer-events-none"></canvas>
        
        <div class="max-w-6xl mx-auto px-6 py-20 relative z-10">
          <div class="grid items-center gap-10 lg:gap-20 lg:grid-cols-[1fr_1fr]">
            <div class="space-y-8">
              <div class="space-y-4">
                <p class="text-sm uppercase tracking-[0.2em] text-primary font-medium inline-flex items-center gap-2">
                  <span class="w-8 h-px bg-primary"></span>
                  Gift Tracking Made Simple
                </p>
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight leading-[1.1]">
                  Track gifts.<br/>
                  <span class="text-primary">Never miss a</span>
                  <span class="text-primary font-normal italic"> மொய்</span>
                </h1>
              </div>
              
              <p class="text-xl md:text-2xl text-base-content/60 leading-relaxed max-w-2xl">
                Real-time gift tracking for weddings, birthdays, and celebrations.
              </p>
              
              <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <a 
                  href={signupUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-8 py-4 bg-primary text-primary-content text-sm uppercase tracking-widest font-semibold hover:bg-primary/90 transition-all hover:scale-105 text-center "
                >
                  Get Started — It's Free
                </a>
                <a 
                  href="#how-it-works" 
                  class="px-8 py-4 border border-base-content/20 text-sm uppercase tracking-widest font-medium hover:border-primary hover:text-primary transition-colors text-center "
                >
                  See How It Works
                </a>
              </div>
              
            </div>

            <div class="relative lg:justify-self-stretch lg:translate-x-4">
              <button
                id="intro-video-trigger"
                type="button"
                aria-label="Play intro video"
                aria-haspopup="dialog"
                aria-controls="intro-video-modal"
                class="group relative w-full overflow-hidden border-[3px] border-base-300 bg-base-100/80 shadow-2xl focus-visible:ring-2 focus-visible:ring-primary/70 focus-visible:ring-offset-2 focus-visible:ring-offset-base-100"
              >
                <div class="aspect-video sm:aspect-[3/4] w-full bg-base-200">
                  <img
                    src="/thumb.jpg"
                    alt="Intro video preview"
                    class="w-full h-full object-cover object-[left_top]"
                    loading="lazy"
                  />
                </div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <span class="flex h-16 w-16 items-center justify-center rounded-full bg-primary/90 text-primary-content shadow-lg transition-transform duration-300 group-hover:scale-105">
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"></path>
                    </svg>
                  </span>
                </div>
                <div class="absolute inset-0 bg-black/10 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
              </button>
            </div>
          </div>

          <dialog
            id="intro-video-modal"
            class="backdrop:bg-black/70 bg-transparent p-0 border-none w-full max-w-none"
          >
            <div class="min-h-screen w-full px-4 py-10 flex items-center justify-center">
              <div id="intro-video-dialog-content" class="w-full max-w-5xl bg-base-100 border-[3px] border-base-300 shadow-2xl">
                <video
                  id="intro-video-player"
                  class="w-full h-auto"
                  data-src="/intro.mp4"
                  controls
                  playsinline
                ></video>
              </div>
            </div>
          </dialog>

          <script is:inline>
            (function() {
              var trigger = document.getElementById('intro-video-trigger');
              var modal = document.getElementById('intro-video-modal');
              var player = document.getElementById('intro-video-player');
              var dialogContent = document.getElementById('intro-video-dialog-content');

              if (!trigger || !modal || !player || !dialogContent) return;

              function resetPlayer() {
                player.pause();
                player.currentTime = 0;
                player.removeAttribute('src');
                player.load();
              }

              trigger.addEventListener('click', function() {
                if (!player.getAttribute('src')) {
                  player.setAttribute('src', player.dataset.src || '');
                  player.load();
                }
                modal.showModal();
              });

              modal.addEventListener('click', function(event) {
                if (!dialogContent.contains(event.target)) {
                  modal.close();
                }
              });

              modal.addEventListener('close', resetPlayer);
            })();
          </script>
        </div>
      </section>

      <!-- Features Section -->
      <section id="features" class="border-t border-base-300 bg-base-200/30">
        <div class="max-w-6xl mx-auto px-6 py-24 md:py-32">
          <div class="text-center mb-16 space-y-4">
            <p class="text-sm uppercase tracking-[0.2em] text-primary font-medium">
              Why Choose Moi
            </p>
            <h2 class="text-4xl md:text-5xl font-bold">
              Everything you need to<br/>track contributions
            </h2>
            <p class="text-base-content/60 max-w-2xl mx-auto text-lg">
              From real-time analytics to seamless sharing, Moi handles it all so you can focus on celebrating.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {FEATURES.map((feature, index) => (
              <div 
                class="group p-8 bg-base-100 border border-base-300 hover:border-primary/50 transition-all duration-300 "
              >
                <div class="w-12 h-12 mb-6 flex items-center justify-center bg-primary/10  group-hover:bg-primary/20 transition-colors">
                  {feature.icon === 'chart' && (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  )}
                  {feature.icon === 'link' && (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                    </svg>
                  )}
                  {feature.icon === 'payment' && (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                  )}
                  {feature.icon === 'team' && (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                  )}
                  {feature.icon === 'export' && (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  )}
                  {feature.icon === 'device' && (
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
                <p class="text-base-content/60 leading-relaxed">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- How It Works Section -->
      <section id="how-it-works" class="border-t border-base-300">
        <div class="max-w-6xl mx-auto px-6 py-24 md:py-32">
          <div class="text-center mb-16 space-y-4">
            <p class="text-sm uppercase tracking-[0.2em] text-primary font-medium">
              Simple Process
            </p>
            <h2 class="text-4xl md:text-5xl font-bold">
              Get started in minutes
            </h2>
            <p class="text-base-content/60 max-w-2xl mx-auto text-lg">
              Three simple steps to start tracking every contribution at your event.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
            {HOW_IT_WORKS.map((step, index) => (
              <div 
                class="relative text-center"
              >
                {index < HOW_IT_WORKS.length - 1 && (
                  <div class="hidden md:block absolute top-12 left-[60%] w-[80%] h-px bg-gradient-to-r from-primary/50 to-transparent"></div>
                )}
                <div class="w-24 h-24 mx-auto mb-6 flex items-center justify-center bg-primary/10  border-2 border-primary/30">
                  <span class="text-3xl font-bold text-primary">{step.step}</span>
                </div>
                <h3 class="text-2xl font-semibold mb-3">{step.title}</h3>
                <p class="text-base-content/60 leading-relaxed max-w-xs mx-auto">{step.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Before vs After Comparison Section -->
      <section id="compare" class="border-t border-base-300 bg-base-200/30 overflow-hidden">
        <div class="max-w-6xl mx-auto px-6 py-24 md:py-32">
          <div class="text-center mb-12 space-y-4">
            <p class="text-sm uppercase tracking-[0.2em] text-primary font-medium">
              The Difference
            </p>
            <h2 class="text-4xl md:text-5xl font-bold">
              Before & After Moi
            </h2>
            <p class="text-base-content/60 max-w-2xl mx-auto text-lg">
              See how Moi transforms chaotic gift tracking into an organized, stress-free experience.
            </p>
          </div>

          <!-- Toggle Switch -->
          <div class="flex justify-center mb-10">
            <label class="inline-flex items-center gap-4 px-6 py-3 bg-base-100 border border-base-300 cursor-pointer select-none rounded-lg">
              <span id="label-before" class="text-sm font-semibold uppercase tracking-wider text-red-500">Before</span>
              <div id="toggle-track" class="relative w-16 h-8 bg-red-500 rounded-full transition-colors duration-300">
                <input type="checkbox" id="compare-toggle" class="sr-only" />
                <div id="toggle-thumb" class="absolute top-1 left-1 w-6 h-6 bg-white rounded-full shadow-md transition-transform duration-300"></div>
              </div>
              <span id="label-after" class="text-sm font-semibold uppercase tracking-wider text-base-content/40">After</span>
            </label>
          </div>

          <!-- Mockups Container -->
          <div class="relative max-w-4xl mx-auto">
            <!-- Before Mockup -->
            <div id="mockup-before" class="mockup-panel">
              <div class="relative bg-amber-100 border-2 border-amber-400 shadow-xl p-4 md:p-8 rotate-[-0.5deg] rounded-sm">
                <!-- Notebook lines background -->
                <div class="absolute inset-0 opacity-30" style="background-image: repeating-linear-gradient(transparent, transparent 23px, #b45309 24px);"></div>
                
                <div class="relative">
                  <!-- Header -->
                  <div class="mb-4 md:mb-6 pb-2 md:pb-3 border-b-2 border-amber-500">
                    <h3 class="text-lg md:text-2xl text-amber-950 font-bold" style="font-family: 'Segoe Script', 'Bradley Hand', cursive;">
                      Wedding Moi List
                    </h3>
                  </div>
                  
                  <!-- Messy entries -->
                  <div class="space-y-2 md:space-y-4 text-amber-950 text-sm md:text-base" style="font-family: 'Segoe Script', 'Bradley Hand', cursive;">
                    <div class="flex justify-between items-center gap-2">
                      <span>Ravi anna</span>
                      <span class="text-right">₹5000 <span class="text-red-700 text-xs md:text-sm font-medium">(cash??)</span></span>
                    </div>
                    <div class="flex justify-between items-center gap-2 line-through opacity-60">
                      <span>Kumar mama</span>
                      <span class="text-right">₹??? <span class="text-xs">(lost)</span></span>
                    </div>
                    <div class="flex justify-between items-center gap-2">
                      <span>Lakshmi aunty</span>
                      <span class="text-amber-800 text-right text-xs md:text-sm">gold or ₹2000?</span>
                    </div>
                    <div class="flex justify-between items-center gap-2 relative">
                      <span>Suresh</span>
                      <span>₹2500</span>
                    </div>
                    <div class="text-center pt-2 md:pt-4 text-amber-700 italic text-xs md:text-sm">
                      ... 47 more names ...
                    </div>
                  </div>
                  
                  <!-- Chaotic footer -->
                  <div class="mt-4 md:mt-8 pt-3 md:pt-4 border-t-2 border-dashed border-amber-500">
                    <div class="flex justify-between items-center gap-2">
                      <span class="text-base md:text-xl text-amber-950 font-bold" style="font-family: 'Segoe Script', 'Bradley Hand', cursive;">Total: ₹???,???</span>
                      <span class="text-red-700 text-xs md:text-sm font-medium">Recount!</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Pain points -->
              <div class="mt-6 md:mt-8 flex flex-wrap justify-center gap-2 md:gap-3">
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-red-500/10 text-red-500 text-xs md:text-sm font-medium rounded-full border border-red-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                  Lost records
                </span>
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-red-500/10 text-red-500 text-xs md:text-sm font-medium rounded-full border border-red-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                  Manual counting
                </span>
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-red-500/10 text-red-500 text-xs md:text-sm font-medium rounded-full border border-red-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                  No backup
                </span>
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-red-500/10 text-red-500 text-xs md:text-sm font-medium rounded-full border border-red-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                  Confusion
                </span>
              </div>
            </div>

            <!-- After Mockup -->
            <div id="mockup-after" class="mockup-panel absolute inset-0 opacity-0 pointer-events-none">
              <div class="bg-stone-100 border border-stone-300 shadow-2xl overflow-hidden rounded-sm">
                <!-- Header -->
                <div class="bg-stone-50 px-4 md:px-6 py-3 md:py-4 border-b border-stone-200 flex items-center justify-between">
                  <div class="flex items-center gap-2 md:gap-3">
                    <div class="w-7 h-7 md:w-8 md:h-8 bg-amber-500/20 flex items-center justify-center flex-shrink-0">
                      <span class="text-amber-600 font-bold text-xs md:text-sm">M</span>
                    </div>
                    <div class="min-w-0">
                      <p class="font-semibold text-xs md:text-sm text-stone-900 truncate">Arun & Priya's Wedding</p>
                      <p class="text-[10px] md:text-xs text-stone-500">getmoi.in/arun-priya</p>
                    </div>
                  </div>
                  <div class="flex items-center gap-1.5 flex-shrink-0">
                    <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                    <span class="text-[10px] md:text-xs text-stone-500">Live</span>
                  </div>
                </div>
                
                <!-- Stats -->
                <div class="p-3 md:p-6">
                  <div class="grid grid-cols-3 gap-2 md:gap-4 mb-4 md:mb-6">
                    <div class="bg-stone-50 border border-stone-200 p-2 md:p-4">
                      <p class="text-[10px] md:text-xs text-stone-500 mb-0.5 md:mb-1">Total</p>
                      <p class="text-sm md:text-2xl font-bold text-stone-900">₹2.45L</p>
                    </div>
                    <div class="bg-stone-50 border border-stone-200 p-2 md:p-4">
                      <p class="text-[10px] md:text-xs text-stone-500 mb-0.5 md:mb-1">Contributors</p>
                      <p class="text-sm md:text-2xl font-bold text-stone-900">127</p>
                    </div>
                    <div class="bg-stone-50 border border-stone-200 p-2 md:p-4">
                      <p class="text-[10px] md:text-xs text-stone-500 mb-0.5 md:mb-1">Confirmed</p>
                      <p class="text-sm md:text-2xl font-bold text-green-700">98%</p>
                    </div>
                  </div>
                  
                  <!-- Table -->
                  <div class="border border-stone-200 overflow-hidden bg-stone-50 text-xs md:text-sm">
                    <div class="bg-stone-100 px-2 md:px-4 py-2 font-semibold text-stone-600 grid grid-cols-[1fr_auto_auto] md:grid-cols-4 gap-2 md:gap-4 border-b border-stone-200">
                      <span>Name</span>
                      <span>Amount</span>
                      <span class="hidden md:block">Type</span>
                      <span>Status</span>
                    </div>
                    <div class="divide-y divide-stone-200 bg-stone-50">
                      <div class="px-2 md:px-4 py-2 md:py-3 grid grid-cols-[1fr_auto_auto] md:grid-cols-4 gap-2 md:gap-4 items-center text-stone-800">
                        <span class="truncate">Ravi Kumar</span>
                        <span class="font-medium">₹5,000</span>
                        <span class="hidden md:block px-2 py-0.5 bg-cyan-100 text-cyan-700 text-xs w-fit rounded">UPI</span>
                        <span class="px-1.5 md:px-2 py-0.5 bg-green-100 text-green-700 text-[10px] md:text-xs w-fit rounded">Confirmed</span>
                      </div>
                      <div class="px-2 md:px-4 py-2 md:py-3 grid grid-cols-[1fr_auto_auto] md:grid-cols-4 gap-2 md:gap-4 items-center text-stone-800">
                        <span class="truncate">Lakshmi Devi</span>
                        <span class="font-medium">₹2,500</span>
                        <span class="hidden md:block px-2 py-0.5 bg-amber-100 text-amber-700 text-xs w-fit rounded">Gift</span>
                        <span class="px-1.5 md:px-2 py-0.5 bg-green-100 text-green-700 text-[10px] md:text-xs w-fit rounded">Confirmed</span>
                      </div>
                      <div class="px-2 md:px-4 py-2 md:py-3 grid grid-cols-[1fr_auto_auto] md:grid-cols-4 gap-2 md:gap-4 items-center text-stone-800">
                        <span class="truncate">Suresh Babu</span>
                        <span class="font-medium">₹3,000</span>
                        <span class="hidden md:block px-2 py-0.5 bg-cyan-100 text-cyan-700 text-xs w-fit rounded">UPI</span>
                        <span class="px-1.5 md:px-2 py-0.5 bg-green-100 text-green-700 text-[10px] md:text-xs w-fit rounded">Confirmed</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Benefits -->
              <div class="mt-6 md:mt-8 flex flex-wrap justify-center gap-2 md:gap-3">
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-green-500/10 text-green-500 text-xs md:text-sm font-medium rounded-full border border-green-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Real-time
                </span>
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-green-500/10 text-green-500 text-xs md:text-sm font-medium rounded-full border border-green-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Export CSV
                </span>
                <span class="inline-flex items-center gap-1.5 md:gap-2 px-3 md:px-4 py-1.5 md:py-2 bg-green-500/10 text-green-500 text-xs md:text-sm font-medium rounded-full border border-green-500/20">
                  <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                  Cloud saved
