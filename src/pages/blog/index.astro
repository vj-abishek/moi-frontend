---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';
import { generateBlogSchema, generateBreadcrumbSchema, combineSchemas } from '../../seo';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const siteOrigin = Astro.site ? new URL(Astro.site).origin : new URL(canonicalUrl).origin;
const blogSchema = generateBlogSchema(canonicalUrl);
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: siteOrigin + '/' },
  { name: 'Blog', url: canonicalUrl },
]);
const schema = combineSchemas(blogSchema, breadcrumbSchema);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead 
      title={`Blog | ${SITE_TITLE}`} 
      description="Thoughts, tutorials, and updates about Moi - the modern gift contribution tracking platform for Indian weddings and celebrations." 
      schema={schema}
      keywords={['moi blog', 'gift tracking blog', 'wedding tips', 'Indian wedding', 'celebration planning']}
    />
  </head>
  <body class="min-h-screen flex flex-col bg-base-100">
    <Header />
    
    <main class="flex-1">
      <!-- Breadcrumbs -->
      <nav class="max-w-5xl mx-auto px-6 pt-6" aria-label="Breadcrumb">
        <ol class="flex flex-wrap items-center gap-x-2 gap-y-1 text-sm text-base-content/50">
          <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
          <li aria-hidden="true">/</li>
          <li class="text-base-content/80" aria-current="page">Blog</li>
        </ol>
      </nav>

      <!-- Page Header -->
      <section class="border-b border-base-300">
        <div class="max-w-5xl mx-auto px-6 py-16 md:py-24">
          <p class="text-xs uppercase tracking-[0.3em] text-base-content/40 font-medium mb-2">
            Archive
          </p>
          <h1 class="text-4xl md:text-6xl font-bold tracking-tight font-sans">
            Blog
          </h1>
          <p class="mt-4 text-base-content/60 max-w-lg">
            A collection of thoughts, tutorials, and explorations.
          </p>
        </div>
      </section>

      <!-- Posts List -->
      <section>
        <div class="max-w-5xl mx-auto px-6 py-12">
          <div class="space-y-0 divide-y divide-base-300">
            {posts.map((post) => (
              <article class="group py-8 first:pt-0 last:pb-0">
                <a href={`/blog/${post.id}/`} class="grid md:grid-cols-[120px_1fr] gap-4 md:gap-8">
                  <div class="text-xs text-base-content/40 pt-1.5">
                    <FormattedDate date={post.data.pubDate} />
                  </div>
                  <div class="space-y-2">
                    <h2 class="text-xl md:text-2xl font-medium group-hover:text-white transition-colors text-base-content/80 font-sans">
                      {post.data.title}
                    </h2>
                    <p class="text-base-content/50 line-clamp-2">
                      {post.data.description}
                    </p>
                    <span class="inline-block text-xs uppercase tracking-widest text-base-content/40 group-hover:text-white transition-colors pt-2">
                      Read more â†’
                    </span>
                  </div>
                </a>
              </article>
            ))}
          </div>

          {posts.length === 0 && (
            <div class="text-center py-24">
              <p class="text-base-content/40">No posts yet. Check back soon!</p>
            </div>
          )}
        </div>
      </section>
    </main>

    <Footer />

  </body>
</html>
