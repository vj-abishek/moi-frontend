---
import PageLayout from '../layouts/PageLayout.astro';
import { generateContactPageSchema } from '../seo';

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

const contactSchema = generateContactPageSchema(canonicalUrl);
---

<PageLayout 
  title="Support" 
  description="Get help with Moi - find answers, contact us, or check system status. We're here to help with your gift tracking needs."
  schema={contactSchema}
  keywords={['moi support', 'moi help', 'gift tracking support', 'contact moi']}
>
  <div class="max-w-4xl mx-auto px-6 py-16 md:py-24">
    <!-- Hero -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-secondary/10 mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
        </svg>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">How can we help?</h1>
      <p class="text-xl text-base-content/60 max-w-2xl mx-auto">
        We're here to help you make the most of Moi.
      </p>
    </div>

    <!-- Support Options -->
    <div class="grid gap-6 md:grid-cols-2 mb-12">
      <!-- Troubleshooting Card -->
      <a href="/troubleshooting" class="group p-8 bg-base-200/50 border border-base-300 hover:border-primary/50 transition-all">
        <div class="w-12 h-12 bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Troubleshooting</h3>
        <p class="text-base-content/60 mb-4">
          Payment issues? Find solutions to common UPI problems.
        </p>
        <span class="text-primary font-medium text-sm group-hover:underline">Fix Issues →</span>
      </a>

      <!-- FAQ Card -->
      <a href="/faq" class="group p-8 bg-base-200/50 border border-base-300 hover:border-primary/50 transition-all">
        <div class="w-12 h-12 bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">FAQ</h3>
        <p class="text-base-content/60 mb-4">
          Find answers to commonly asked questions about using Moi.
        </p>
        <span class="text-primary font-medium text-sm group-hover:underline">Browse FAQ →</span>
      </a>

      <!-- Email Support Card -->
      <a href="mailto:abishek@merg.cc" class="group p-8 bg-base-200/50 border border-base-300 hover:border-primary/50 transition-all">
        <div class="w-12 h-12 bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Email Support</h3>
        <p class="text-base-content/60 mb-4">
          Send us an email and we'll get back to you within 24 hours.
        </p>
        <span class="text-primary font-medium text-sm group-hover:underline">abishek@merg.cc →</span>
      </a>

      <!-- Status Card -->
      <a href="/status" class="group p-8 bg-base-200/50 border border-base-300 hover:border-primary/50 transition-all">
        <div class="w-12 h-12 bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">System Status</h3>
        <p class="text-base-content/60 mb-4">
          Check if there are any ongoing issues or maintenance.
        </p>
        <span class="text-primary font-medium text-sm group-hover:underline">View Status →</span>
      </a>

      <!-- Trust & Security Card -->
      <a href="/trust" class="group p-8 bg-base-200/50 border border-base-300 hover:border-primary/50 transition-all">
        <div class="w-12 h-12 bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Trust & Security</h3>
        <p class="text-base-content/60 mb-4">
          Learn how we protect your data and privacy.
        </p>
        <span class="text-primary font-medium text-sm group-hover:underline">Learn More →</span>
      </a>
    </div>
  </div>
</PageLayout>
