---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import { generateBlogPostingSchema, SEO_CONFIG } from '../seo';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Format dates for schema
const datePublished = pubDate.toISOString();
const dateModified = updatedDate ? updatedDate.toISOString() : datePublished;

// Get hero image URL for schema
const heroImageUrl = heroImage 
  ? (typeof heroImage === 'string' ? heroImage : heroImage.src)
  : SEO_CONFIG.logoUrl;

const blogPostSchema = generateBlogPostingSchema(
  canonicalUrl,
  title,
  description,
  datePublished,
  dateModified,
  heroImageUrl
);
---

<html lang="en">
  <head>
    <BaseHead 
      title={`${title} | ${SITE_TITLE}`} 
      description={description} 
      image={heroImage}
      schema={blogPostSchema}
      dateModified={dateModified}
      keywords={['moi', 'gift tracking', 'wedding', title.toLowerCase()]}
    />
  </head>

  <body class="min-h-screen flex flex-col bg-base-100">
    <Header />
    
    <main class="flex-1">
      <article>
        <!-- Hero Section -->
        <header class="border-b border-base-300">
          <div class="max-w-3xl mx-auto px-6 py-16 md:py-24">
            <div class="space-y-4">
              <div class="flex items-center gap-4 text-xs text-base-content/40">
                <FormattedDate date={pubDate} />
                {updatedDate && (
                  <span class="text-base-content/30">
                    · Updated <FormattedDate date={updatedDate} />
                  </span>
                )}
              </div>
              <h1 class="text-3xl md:text-5xl font-bold tracking-tight leading-tight font-sans">
                {title}
              </h1>
              {description && (
                <p class="text-lg text-base-content/60 max-w-2xl">
                  {description}
                </p>
              )}
            </div>
          </div>
        </header>

        <!-- Hero Image -->
        {heroImage && (
          <div class="max-w-4xl mx-auto px-6 py-8">
            <Image 
              src={heroImage} 
              alt="" 
              width={960} 
              height={480}
              class="w-full h-auto border border-base-300"
            />
          </div>
        )}

        <!-- Content -->
        <div class="max-w-3xl mx-auto px-6 py-12">
          <div class="prose max-w-none">
            <slot />
          </div>
        </div>

        <!-- Back to Blog -->
        <div class="max-w-3xl mx-auto px-6 pb-16">
          <a 
            href="/blog" 
            class="inline-flex items-center gap-2 text-sm uppercase tracking-widest text-base-content/40 hover:text-white transition-colors"
          >
            ← Back to Blog
          </a>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
