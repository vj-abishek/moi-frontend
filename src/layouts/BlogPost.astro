---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, getAppUrl } from '../consts';
import { generateBlogPostingSchema, generateBreadcrumbSchema, combineSchemas, SEO_CONFIG } from '../seo';
import defaultHeroImage from '../assets/blog/qr-wedding-card-guide/blog-image.png';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage: propsHeroImage } = Astro.props;

const heroImage = propsHeroImage || defaultHeroImage;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Format dates for schema
const datePublished = pubDate.toISOString();
const dateModified = updatedDate ? updatedDate.toISOString() : datePublished;

// Get hero image URL for schema
const heroImageUrl = heroImage 
  ? (typeof heroImage === 'string' ? heroImage : heroImage.src)
  : SEO_CONFIG.logoUrl;

const blogPostSchema = generateBlogPostingSchema(
  canonicalUrl,
  title,
  description,
  datePublished,
  dateModified,
  heroImageUrl
);

const siteOrigin = Astro.site ? new URL(Astro.site).origin : new URL(canonicalUrl).origin;
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: siteOrigin + '/' },
  { name: 'Blog', url: siteOrigin + '/blog/' },
  { name: title, url: canonicalUrl },
]);
const schema = combineSchemas(blogPostSchema, breadcrumbSchema);

const signupUrl = getAppUrl('/signup', Astro.url);
const heroAlt = description ? `${title}: ${description}` : title;
---

<html lang="en">
  <head>
    <BaseHead 
      title={`${title} | ${SITE_TITLE}`} 
      description={description} 
      image={heroImage}
      schema={schema}
      dateModified={dateModified}
      keywords={['moi', 'gift tracking', 'wedding', title.toLowerCase()]}
    />
  </head>

  <body class="min-h-screen flex flex-col bg-base-100">
    <Header />
    
    <main class="flex-1">
      <article>
        <!-- Hero Section -->
        <header class={`relative flex flex-col justify-center transition-all duration-300 ${heroImage ? 'mx-4 md:mx-8 xl:mx-auto max-w-7xl mt-4 md:mt-6 rounded-3xl md:rounded-[2.5rem] overflow-hidden min-h-[50vh] md:min-h-[60vh] lg:min-h-[70vh] shadow-2xl shadow-base-300/50' : 'border-b border-base-300'}`}>
          {heroImage && (
            <div class="absolute inset-0 z-0">
              <Image 
                src={heroImage} 
                alt={heroAlt} 
                width={1920}
                height={1080}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-black/50 bg-gradient-to-t from-black/80 via-black/40 to-black/40"></div>
            </div>
          )}

          <div class="relative z-10 w-full flex-1 flex flex-col">
            <!-- Breadcrumbs -->
            <nav class="max-w-3xl mx-auto w-full px-6 pt-8 md:pt-12 pb-2" aria-label="Breadcrumb">
              <ol class={`flex flex-wrap items-center gap-x-2 gap-y-1 text-sm font-medium ${heroImage ? 'text-white/70' : 'text-base-content/50'}`}>
                <li><a href="/" class={`transition-colors ${heroImage ? 'hover:text-white' : 'hover:text-primary'}`}>Home</a></li>
                <li aria-hidden="true">/</li>
                <li><a href="/blog/" class={`transition-colors ${heroImage ? 'hover:text-white' : 'hover:text-primary'}`}>Blog</a></li>
                <li aria-hidden="true">/</li>
                <li class={`truncate max-w-[200px] sm:max-w-xs ${heroImage ? 'text-white' : 'text-base-content/80'}`} aria-current="page">{title}</li>
              </ol>
            </nav>

            <div class={`max-w-3xl mx-auto px-6 flex flex-col justify-end flex-1 w-full ${heroImage ? 'py-12 md:py-16' : 'py-12 md:py-16'}`}>
              <div class={`flex items-center gap-3 text-sm font-semibold uppercase tracking-wider mb-4 ${heroImage ? 'text-white/90 drop-shadow-sm' : 'text-base-content/60'}`}>
                <FormattedDate date={pubDate} />
                {updatedDate && (
                  <span>
                    · Updated <FormattedDate date={updatedDate} />
                  </span>
                )}
              </div>
              <h1 class={`text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight leading-[1.15] font-sans text-balance mb-6 ${heroImage ? 'text-white drop-shadow-md' : ''}`}>
                {title}
              </h1>
              {description && (
                <p class={`text-lg md:text-xl max-w-2xl text-balance leading-relaxed ${heroImage ? 'text-white/90 drop-shadow-sm' : 'text-base-content/70'}`}>
                  {description}
                </p>
              )}
            </div>
          </div>
        </header>

        <!-- Content -->
        <div class="max-w-3xl mx-auto px-6 py-12">
          <div class="prose max-w-none">
            <slot />
          </div>
        </div>

        <!-- CTA + Back to Blog -->
        <div class="max-w-3xl mx-auto px-6 pb-16 space-y-10">
          <div class="rounded-xl border border-base-300 bg-base-200/50 p-6 md:p-8 text-center">
            <p class="text-lg font-medium text-base-content mb-3">Try Moi for your next celebration</p>
            <p class="text-sm text-base-content/60 mb-5 max-w-md mx-auto">One link for guests. Real-time tracking. UPI, cash & gifts in one place.</p>
            <a
              href={signupUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-6 py-3 bg-primary text-primary-content font-semibold text-sm uppercase tracking-wider hover:bg-primary/90 transition-colors"
            >
              Get started free
            </a>
          </div>
          <a 
            href="/blog" 
            class="inline-flex items-center gap-2 text-sm uppercase tracking-widest text-base-content/40 hover:text-white transition-colors"
          >
            ← Back to Blog
          </a>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
